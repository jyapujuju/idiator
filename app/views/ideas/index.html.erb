<h1>this is my first app ever a</h1>
<% @ideas.each do |idea| %>
<div class="panel-body">
    <blockquote>
        <p><%= idea.description %></p>
        <small>by <%= idea.author %></small>
    </blockquote>
</div>
<% end %>
  <%= simple_form_for Idea.new do |f| %>
    <%= f.input :description %>
    <%= f.input :author %>
    <%= f.submit 'submit', class: 'btn btn-primary' %>
  <% end %>
